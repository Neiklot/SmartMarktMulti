<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartMarkt"
             x:Class="SmartMarkt.MainPage" BackgroundColor="Black">
    <StackLayout x:Name="loginLayout" RelativeLayout.WidthConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Width}"
            RelativeLayout.HeightConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Height}">

        <Button x:Name="logout" BackgroundColor="Gray" TextColor="Purple"
                   TranslationY="150" Margin="20" Text="Logout"/>
    </StackLayout>
</ContentPage>