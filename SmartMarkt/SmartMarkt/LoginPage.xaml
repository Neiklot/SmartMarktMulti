<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartMarkt.LoginPage">
    <RelativeLayout   BackgroundColor="Black" VerticalOptions="Fill">
        <Image  Source="login.png" Opacity="0.5" Scale="5" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  />

        <StackLayout x:Name="loginLayout" RelativeLayout.WidthConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Width}"
            RelativeLayout.HeightConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Height}">
            <Label x:Name="logo" Font="Bold,60" TextColor="White" TranslationY="75" Margin="0"
                   HorizontalOptions="Center" VerticalOptions="Center" Text="Smart Markt" />

            <Entry x:Name="username" BackgroundColor="White" Opacity="0.7" TextColor="Fuchsia"
                   TranslationY="125" Margin="20" Placeholder="Login"/>
            <Entry x:Name="password" BackgroundColor="White" Opacity="0.7" TextColor="Fuchsia"
                   TranslationY="125" Margin="20" Placeholder="Password"/>
            <Button x:Name="button" BackgroundColor="Gray" TextColor="Purple"
                   TranslationY="150" Margin="20" Text="Login"/>
        </StackLayout>
    </RelativeLayout> 
</ContentPage>